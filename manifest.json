{
  "manifest_version": 2,

  "name": "Mono text",
  "description": "This extension changes <textarea> style to use monospace font",
  "version": "0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["findTextarea.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
